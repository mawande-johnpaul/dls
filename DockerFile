# Use Python official image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
# Ensure pipenv creates the virtualenv in the project folder or handles it globally
ENV PIPENV_VENV_IN_PROJECT=1

WORKDIR /app

# Install pipenv
RUN pip install --no-cache-dir pipenv

# Copy Pipfile and Pipfile.lock from the server subdir
COPY server/Pipfile server/Pipfile.lock /app/

# Install dependencies system-wide inside the container
RUN pipenv install --system --deploy

# Copy the rest of the server code
COPY server/ /app/

# Expose Railway's default port
EXPOSE 8080

# Since your project is called 'server', the wsgi path is 'server.wsgi'
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "server.wsgi:application"]